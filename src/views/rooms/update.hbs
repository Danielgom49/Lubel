<div class="container">
    <div class="flex flex-col justify-center items-center border border-black m-2">
        <div class="h-full w-full mt-5">
            <div class="text-center">
                <h1 class="text-xl font-bold">MODIFICAR CUARTO</h1>
            </div>
        </div>
        <form action="/rooms/update/{{rooms.id}}" method="post" class="flex flex-col justify-center items-center w-full mx-5 p-5">
            <div class="flex flex-row justify-start items-center w-full border-b border-black">
                <a href="/rooms" class="bg-cyan-800 text-white rounded p-2 m-3">Volver al Listado</a>
            </div>
            <div class="flex flex-row justify-around items-center">
                <div>
                    <div class="flex flex-row justify-between items-center">
                        <div class="m-4 flex flex-col">
                            <label class="text-sm">Número del Cuarto</label>
                            <input type="number" class="border border-black rounded h-8 w-48 px-2" name="number_room" value="{{rooms.number_room}}" />
                        </div>
                        <div class="m-4 flex flex-col">
                            <label class="text-sm">Precio por Día</label>
                            <input type="number" class="border border-black rounded h-8 w-48 px-2" name="price"  value="{{rooms.price}}"/>
                        </div>
                    </div>
                    <div class="flex flex-row justify-btween items-center">
                        <div class="m-4 flex flex-col">
                            <label class="text-sm">Tipo de Cuarto</label>
                            <select class="border border-black rounded h-8 w-48 px-2" name="type_room">
                                <option value="0">Seleccione</option>
                                <option value="Cuarto">Cuarto</option>
                                <option value="Apartaestudio">Apartaestudio</option>
                            </select>
                        </div>
                        <div class="m-4 flex flex-col">
                            <label class="text-sm">Cantidad de Camas</label>
                            <input type="number" class="border border-black rounded h-8 w-48 px-2" name="cant_beds" value="{{rooms.cant_beds}}" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-row justify-between items-center m-5">
                <div>
                    <button class="bg-cyan-800 text-white rounded p-2">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>